{
  "name": "@repo/backend",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    "./utils": "./dist/utils/index.js",
    "./firebase": "./dist/firebase.js"
  },
  "scripts": {
    "bundle": "tsup-node",
    "bundle:watch": "tsup-node --watch",
    "type:check": "tsc --noEmit",
    "type:gen": "tsc --emitDeclarationOnly",
    "type:gen:watch": "tsc --emitDeclarationOnly --watch",
    "build": "run-p bundle type:gen",
    "dev": "run-p bundle:watch type:gen:watch",
    "clean": "del dist tsconfig.tsbuildinfo",
    "test": "vitest",
    "coverage": "vitest run --coverage ",
    "lint": "eslint . --max-warnings 0"
  },
  "license": "MIT",
  "dependencies": {
    "@repo/common": "workspace:*",
    "@sindresorhus/is": "^7.0.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "ts-is-present": "^1.2.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.7.5",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  }
}
