{
  "name": "@repo/core",
  "description": "Code to share between backend apps/services",
  "version": "0.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "check-circular": "madge --circular --extensions ts ./src --ts-config ./tsconfig.json",
    "lint": "eslint src --flag unstable_config_lookup_from_file --max-warnings 0 ",
    "test": "vitest",
    "build": "bunchee --sourcemap --runtime node --target es2022",
    "clean": "del-cli dist tsconfig.tsbuildinfo",
    "coverage": "vitest run --coverage "
  },
  "license": "MIT",
  "dependencies": {
    "@repo/common": "workspace:*",
    "@sindresorhus/is": "^7.0.1",
    "firebase-admin": "^13.0.2",
    "firebase-functions": "^6.3.0",
    "get-or-throw": "^1.4.0"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "^1.2.0",
    "@eslint/js": "^9.19.0",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^22.10.10",
    "bunchee": "^6.6.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.19.0",
    "madge": "^8.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.0.4"
  },
  "exports": {
    "./db-refs": {
      "types": "./dist/db-refs.d.ts",
      "default": "./dist/db-refs.js"
    },
    "./firebase": {
      "types": "./dist/firebase.d.ts",
      "default": "./dist/firebase.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "default": "./dist/utils.js"
    }
  }
}
