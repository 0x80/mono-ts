{
  "name": "@repo/common",
  "description": "Common code for both backend and frontend",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "check-circular": "madge --circular --extensions ts ./src --ts-config ./tsconfig.json",
    "test": "vitest",
    "build": "bunchee --sourcemap --target es2022",
    "clean": "del-cli dist tsconfig.tsbuildinfo",
    "lint": "eslint src --flag unstable_config_lookup_from_file --max-warnings 0",
    "coverage": "vitest run --coverage"
  },
  "license": "MIT",
  "dependencies": {
    "firebase": "^11.2.0",
    "remeda": "^2.20.0"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "^1.2.0",
    "@eslint/js": "^9.19.0",
    "@repo/eslint-config": "workspace:*",
    "bunchee": "^6.6.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.19.0",
    "madge": "^8.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.0.4"
  }
}
