{
  "name": "@mono/api",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    ".env.*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "tsup-node",
    "build:watch": "tsup-node --watch",
    "emulate": "firebase emulators:start --project demo-mono-ts --only functions",
    "dev": "concurrently \"npm:build:watch\" \"npm:emulate\"",
    "lint": "eslint \"**/*.ts*\"",
    "deploy": "firebase deploy --project demo-mono-ts --only functions"
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.3.0",
    "@mono/backend": "workspace:*",
    "@mono/common": "workspace:*",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^11",
    "firebase-functions": "^4.5.0",
    "firestore-server-utils": "1.0.0-4",
    "lodash-es": "^4.17.21",
    "nocache": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@mono/eslint-config-custom": "workspace:*",
    "@mono/tsconfig": "workspace:*",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.4",
    "firebase-tools-with-isolate": "13.0.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
